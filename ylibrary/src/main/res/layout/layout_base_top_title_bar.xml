<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_top_title_bar_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_top_title_bar">

    <TextView
        android:id="@+id/tv_top_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/app_topbar_title_text_size" />

    <TextView
        android:id="@+id/tv_top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/app_topbar_title_text_size" />

    <com.taobao.uikit.feature.view.TImageView
        android:id="@+id/timg_title"
        android:visibility="gone"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_top_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/app_topbar_title_text_size" />


</FrameLayout>

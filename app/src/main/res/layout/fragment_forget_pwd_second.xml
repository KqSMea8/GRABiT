<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingLeft="20.5dp">

    <com.taobao.uikit.feature.view.TTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/text_sms_code"
        android:textColor="@color/app_font_color_main_title"
        android:textSize="@dimen/app_font_title_sub_20sp" />

    <com.taobao.uikit.feature.view.TTextView
        android:id="@+id/ttv_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="@string/text_sms_code_remind"
        android:textColor="@color/app_font_color_main_title_sub"
        android:textSize="@dimen/app_font_title_sub_15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_sms_code"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="@string/text_sms_code_hint"
            android:inputType="number"
            android:textColor="@color/app_font_color_main_title"
            android:textColorHint="@color/app_font_color_main_title_hint"
            android:textSize="@dimen/app_font_title_sub_13sp" />

        <com.taobao.uikit.feature.view.TTextView
            android:id="@+id/ttv_s"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="21dp"
            android:gravity="center_vertical|right"
            android:textColor="#000"
            android:textSize="@dimen/app_font_title_sub_13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/app_line_color_dc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.taobao.uikit.feature.view.TTextView
            android:id="@+id/tbtn_get_code_again"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="48dp"
            android:gravity="center"
            android:text="@string/text_get_sms_code"
            android:textColor="@color/app_font_color_main_title_sub"
            android:textSize="@dimen/app_font_title_sub_13sp" />

        <com.taobao.uikit.feature.view.TTextView
            android:id="@+id/tbtn_next"
            android:layout_width="126dp"
            android:layout_height="40dp"
            android:enabled="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/btn_color_191917"
            android:gravity="center"
            android:text="@string/text_register_next"
            android:textColor="@color/color_white"
            android:textSize="@dimen/app_font_title_sub_14sp" />
    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/radio_layout"
    android:background="#000"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_home_navi_height">

    <RadioButton
        android:id="@+id/rbtn_home_found"
        android:gravity="center"
        android:textColor="@drawable/selector_home_tab_color"
        android:button="@drawable/selector_home_tab_found"
        android:drawablePadding="1dp"
        android:paddingTop="4dp"
        android:checked="true"
        android:textSize="@dimen/app_font_navi_tab"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <RadioButton
        android:id="@+id/rbtn_home_card"
        android:gravity="center"
        android:textColor="@drawable/selector_home_tab_color"
        android:button="@null"
        android:drawableTop="@drawable/selector_home_tab_card"
        android:drawablePadding="1dp"
        android:paddingTop="4dp"
        android:textSize="@dimen/app_font_navi_tab"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <RadioButton
        android:id="@+id/rbtn_home_mine"
        android:gravity="center"
        android:textColor="@drawable/selector_home_tab_color"
        android:button="@null"
        android:drawableTop="@drawable/selector_home_tab_mine"
        android:drawablePadding="1dp"
        android:paddingTop="4dp"
        android:textSize="@dimen/app_font_navi_tab"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

</RadioGroup>
